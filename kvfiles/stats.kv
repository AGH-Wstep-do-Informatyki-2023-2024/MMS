#:kivy 2.2.1

<ExerciseSelector>
    cols: 1

    Label:
        text: "One Rep MAX calculator"
        text_size: self.size
        font_size: '30sp'
        halign: 'center'
        valign: 'top'
        size_hint_y: None

    TextInput:
        id: weight_input
        multiline: False
        size_hint_y: None
        height: 60
        width: 200
        hint_text: "Podniesiony ciężar"

    TextInput:
        id: reps_input
        multiline: False
        size_hint_y: None
        height: 60
        width: 200
        hint_text: "Ilość wykonanych powtórzeń"

    Spinner:
        id: exercise_spinner
        text: 'Wybierz ćwiczenie'
        values: ['Squat', 'Bench Press', 'Deadlift', 'Overhead Press', 'Pull Ups', 'Dips']
        size_hint_y: None
        height: 44
        size_hint_x: None
        width: 200
        pos_hint: {'center_x': 0.5}
        dropdown_cls: 'DropDown'
        on_text: root.on_spinner_text(self.text)

    Button:
        text: "Oblicz ORM"
        size_hint: None, None
        height: 25
        width: 100  
        on_press: root.onerepmax()

    Label:
        text: 
            "Należy jednak pamiętać, że kalkulator podaje tylko przybliżone wartości, dlatego dźwigaj z głową !"
        halign: 'center'
        valign: 'bottom'
        text_size: self.size
        font_size: '20sp'
